<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentHome"
    android:orientation="vertical">

        <RelativeLayout
            android:layout_weight="1"
            android:id="@+id/topPanel"
            android:layout_width="match_parent"
            android:layout_height="50dp">


            <TextView
                android:layout_gravity="center"
                android:id="@+id/title"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="Aritare"
                android:textColor="@color/green_dark"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp">

                <ImageButton
                    android:id="@+id/notification"
                    android:backgroundTint="@color/green_dark"
                    android:background="@drawable/notify_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />

                <ImageButton
                    android:id="@+id/cart"
                    android:layout_marginStart="15dp"
                    android:backgroundTint="@color/green_dark"
                    android:background="@drawable/cart_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />


            </LinearLayout>


        </RelativeLayout>

        <ImageView
            android:id="@+id/line"
            android:layout_below="@id/topPanel"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/rectangle_nb"
            android:layout_marginVertical="5dp"/>

    <RelativeLayout
        android:id="@+id/search_bar"
        android:layout_below="@id/line"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/rectangle_sch"
        android:elevation="3dp"
        android:outlineAmbientShadowColor="@color/black">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="15dp"
            android:background="@color/transparent"
            android:hint="Search Product Name"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/search"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginVertical="10dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/search_icon"
            android:backgroundTint="@color/green_dark" />


    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_bar"/>

</RelativeLayout>